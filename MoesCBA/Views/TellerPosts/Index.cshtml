@model IEnumerable<CBA.Core.Implementation.CustomerAccount>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        <p>@TempData["Success"] <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> </p>

    </div>

}
@if (!Model.Any())
{
    <p>We don't have any Accounts yet</p>
}
else
{
   
        <h2>Till Account Balance: @Math.Round(ViewBag.GlBalance,2)</h2>
        <table id="customersAccount" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Account Name</th>
                    <th>Account Number</th>
                    <th>Account Balance</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customersAccount in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(customersAccount.AccountName, "New", "TellerPosts", new { id = customersAccount.Id }, null)</td>
                        <td>@customersAccount.AccountNumber</td>
                        <td>@Html.DisplayFor(a=>customersAccount.Balance)</td>
                        <td><button data-customer-id="@customersAccount.Id" class="btn-link js-delete">Select</button></td>
                    </tr>

                }
            </tbody>
        </table>
    
}
@section ViewSpecificJavascript{
<script>
    $(document).ready(function () {
        $("#customersAccount").DataTable();
           });

</script>


}
