@using System.Web.Optimization

@model CBA.Core.ViewModels.GlPostViewModel
@{
    ViewBag.Title = "GlPostForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger">
        <p>@TempData["error"] <span class="closebtn" onclick="this.parentElement.parentElement.style.display='none';">&times;</span> </p>

    </div>
}
@using (Html.BeginForm("Save", "GlPosts"))
{

    <div class=" form-signin">
        <div class="text-center  mb-4">
            <h1>Add Gl Post</h1>
        </div>
        <div class="form-group">
            <label>GL Account to Credit</label><br/>

            <div class="input-group shadow_p">
                <div class="input-group-addon borderless_right  ">
                    <i class="fa fa-bars width_30 "></i>
                </div>
                @Html.DropDownListFor(m => m.GlPost.GlAccountToCreditId, new SelectList(Model.GlAccounts, "id", "Name"), "Select Account ", new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(m => m.GlPost.GlAccountToCredit)
            </div>
         

        </div>
        <div class="form-group">
            <label>GL Account to Debit</label><br/>

            <div class="input-group shadow_p">
                <div class="input-group-addon borderless_right  ">
                    <i class="fa fa-bars width_30 "></i>
                </div>
                @Html.DropDownListFor(m => m.GlPost.GlAccountToDebitId, new SelectList(Model.GlAccounts, "id", "Name"), "Select Account ", new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(m => m.GlPost.GlAccountToCredit)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.GlPost.Amount)

            <div class="input-group shadow_p">
                <div class="input-group-addon borderless_right  ">
                    <i class="fa fa-money width_30 "></i>
                </div>
                @Html.TextBoxFor(m => m.GlPost.Amount, new {@class = "form-control", required = "required"})
                @Html.ValidationMessageFor(m => m.GlPost.Amount)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.GlPost.Narration)
            <div class="input-group shadow_p">
                <div class="input-group-addon borderless_right  ">
                    <i class="fa fa-ellipsis-h width_30 "></i>
                </div>
                @Html.TextBoxFor(m => m.GlPost.Narration, new { @class = "form-control", required = "required", placeholder = "Enter Reason" })
                @Html.ValidationMessageFor(m => m.GlPost.Narration)

            </div>
    
        </div>
       
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Save</button>

    </div>
}
