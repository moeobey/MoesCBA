@using System.Web.Optimization
@model CBA.Core.Implementation.User
@{
    //ViewBag.Title = "Index";
    //ViewBag.Description = "Home Page";
    Layout = null;
    //ViewBag.msg = "yo";
}


@Styles.Render("~/Bundles/css")
<div class="limiter" >
    <div class="container-login100">
        <div class="wrap-login100">
            @using (Html.BeginForm("AuthenticateUser", "Account",FormMethod.Post,new{@class ="login100-form validate-form p-l-55 p-r-55 p-t-178"}))
            {

                <div class=" form-signin">
                 <span class="login100-form-title">
						Sign In
					</span>

                    @if (ViewBag.msg != null)
                    {
                        <div class=" alert alert-danger">
                            <strong>@ViewBag.msg</strong>
                        </div>
                    }
                    <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter username">

                        @Html.TextBoxFor(m => m.Username, new { @class = "input100", placeholder = "username", required = "required" })
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter username">
                        @Html.PasswordFor(m => m.Password, new { @class = "input100", placeholder = "password", required = "required" })
                        <span class="focus-input100"></span>
                    </div>

                    @Html.AntiForgeryToken()
                    <div class="container-login100-form-btn ">
                        <button class="login100-form-btn  m-b-40 bg_lightGreen">Sign in</button>
                    </div>

                </div>

            }
            </div>
        </div>
    </div>


