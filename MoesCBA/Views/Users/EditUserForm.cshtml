@using System.Web.Optimization
@model CBA.Core.ViewModels.NewUserViewModel
@{
    ViewBag.Title = "UserForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("UpdateUserDetails", "Users"))
{

    <div class=" form-signin">
        <div class="text-center  mb-4">
            <h1>Edit Teller</h1>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.User.FullName)
            @Html.TextBoxFor(m => m.User.FullName, new { @class = "form-control" , required="required"})
            @Html.ValidationMessageFor(m => m.User.FullName)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.User.Email)
            @Html.TextBoxFor(m => m.User.Email, new { @class = "form-control" ,required="required", type ="email"})
            @Html.ValidationMessage("EmailExist", new { @class = "user-validation-error" })
        </div>
        <div class="form-group">

            @Html.LabelFor(m => m.User.Branch, new { })
            @Html.DropDownListFor(m => m.User.BranchId, new SelectList(Model.Branches, "id", "Name"), "Select Branch ", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.User.BranchId)

        </div>

       
        <div class="form-group">
            @Html.LabelFor(m => m.User.PhoneNumber)

            @Html.TextBoxFor(m => m.User.PhoneNumber, new { @class = "form-control", required="required"})
            @Html.ValidationMessageFor(m => m.User.PhoneNumber)
        </div>


        @Html.HiddenFor(m =>m.User.Id)
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Save</button>

    </div>
}

