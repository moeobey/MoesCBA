@using System.Web.Optimization
@model CBA.Core.Implementation.User
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@Styles.Render("~/Bundles/css")
@using (Html.BeginForm("UpdatePassword", "Users"))
{

    <div class=" form-signin">
        <div class="text-center  mb-4">
            <h1>ChangePassword</h1>
        </div>
        @if (ViewBag.msg != null)
        {
            <div class=" alert alert-danger">
                <strong>@ViewBag.msg</strong>
            </div>
        }

        <div class="form-group">
            <label>Old Password</label>
            <div class="input-group shadow_p">
                <div class="input-group-addon borderless_right" id="address">
                    <i class="fa fa-lock width_30 "></i>
                </div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Old Password", required = "required" })
                @Html.ValidationMessage("PasswordIncorrect")
            </div>
        </div>

        <div class="form-group">
            <label>Old Password</label>
            <div class="input-group shadow_p">
                <div class="input-group-addon borderless_right" id="address">
                    <i class="fa fa-lock width_30 "></i>
                </div>
                <input name="newPassword" type="password" placeholder="new password" class="form-control" required="required" />
                @Html.ValidationMessage("PasswordMismatch")
            </div>
        </div>
        <div class="form-group">
            <label>Old Password</label>
            <div class="input-group shadow_p">
                <div class="input-group-addon borderless_right" id="address">
                    <i class="fa fa-lock width_30 "></i>
                </div>
                <input name="confirmPassword" type="password" placeholder="new password" class="form-control" required="required" />
                @Html.ValidationMessage("PasswordMismatch")
            </div>

        </div>


        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Save</button>

    </div>

}