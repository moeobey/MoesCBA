
@model CBA.Core.ViewModels.LoanAccountConfigViewModel
@{
    ViewBag.Title = "SavingsAccountTypeForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["message"] != null)
{
    <div class="alert alert-success">
        <p>@TempData["message"] <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> </p>

    </div>
}

@using (Html.BeginForm("SaveLoanConfig", "AccountTypeConfig"))
{

    <div class=" form-signin">


        <div class="form-group">
            @Html.LabelFor(m => m.DInterestRate)
            @Html.TextBoxFor(m => m.DInterestRate, new { @class = "form-control", required = "required", type = "number", min = "1", max = "10" })
            @Html.ValidationMessageFor(m => m.DInterestRate)
        </div>

        @if (Model.Id == 0)
        {
            <div class="form-group">

                @Html.LabelFor(m => m.InterestIncomeGls, new { })
                @Html.DropDownListFor(m => m.InterestIncomeGlId, new SelectList(Model.InterestIncomeGls, "id", "Name"), "Select Interest Expense GL ", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.InterestIncomeGls)

            </div>
        }
        @if (Model.Id != 0)
        {
            <div class="form-group">
                <label>Current Interest Income GL Account:</label>
                @Html.DisplayTextFor(m => m.InterestIncomeGl.Name)

            </div>
            <div class="form-group">

                @Html.LabelFor(m => m.InterestIncomeGls, new { })
                @Html.DropDownListFor(m => m.InterestIncomeGlId, new SelectList(Model.InterestIncomeGls, "id", "Name"), "Change Interest Expense GL ", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.InterestIncomeGls)

            </div>
        }

        @Html.AntiForgeryToken()
        <button class="btn btn-primary">Set Configurations</button>
        @Html.HiddenFor(m => m.Id)
    </div>
}

@section ViewSpecificJavascript{
    <script>
        $(document).ready(function () {
       
            setTimeout(function () {
                $(".alert-success").fadeOut(100, null);
            }, 3000);
        });

    </script>


}


