@model IEnumerable<CBA.Core.Implementation.GlCategory>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h1>
            <b>
                Gl Categories
            </b>
        </h1>
    </div>
    <div class="option_span  col-md-offset-11 col-md-6 m-b-15">
        @Html.ActionLink("  Add Category", "New", "GlCategory", null, new { @class = "fa fa-plus add_button bg_lightBlue m-b-10" })
    </div>
</div>

@if (!Model.Any())
{
    <p>We don't have any Gl Account Category Yet</p>
}
else
{
    if (Session["Role"] != null && Session["Role"].ToString() == "Admin")
    {
     
        <table id="table" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th> Name</th>
                    <th>Main Account Category </th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(category.Name, "Edit", "GlCategory", new { id = category.Id }, null)</td>

                        <td>@category.MainAccountCategory</td>
                        <td>
                        <div class="option_span pull-left">
                            @Html.ActionLink(" ", "Edit", "GlCategory", new { id = category.Id }, new { @class = "fa fa-pencil table_extra" })
                            @Html.ActionLink(" ", "Details", "GlCategory", new { id = category.Id }, new { @class = "fa fa-eye table_extra" })
                            @Html.ActionLink(" ", "Delete", "GlCategory", new { id = category.Id }, new { @class = "fa fa-trash table_extra" })

                        </div>
                        </td>

                    </tr>

                }
            </tbody>
        </table>
    }
}

