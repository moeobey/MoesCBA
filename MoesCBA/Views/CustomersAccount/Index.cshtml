@model IEnumerable<CBA.Core.Implementation.CustomerAccount>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (TempData["message"] != null)
{
    <div class="alert alert-success">
        <p>@TempData["message"] <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> </p>

    </div>

}
@if (!Model.Any())
{
    <p>We don't have any Accounts yet</p>
}
else
{
    if (Session["Role"] != null && Session["Role"].ToString() == "Admin")
    {
        <h2>Users</h2>
        <table id="customersAccount" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Account Name</th>
                    <th>Account Number</th>
                    <th>Branch</th>
                    <th>Account Type</th>
                    <th>Account Balance</th>

                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customersAccount in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(customersAccount.AccountName, "Edit", "CustomersAccount", new { id = customersAccount.Id }, null)</td>
                        <td>@customersAccount.AccountNumber</td>
                        <td>@customersAccount.Branch.Name</td>
                        <td>@customersAccount.AccountType</td>
                        <td>@customersAccount.Balance</td>
                        <td>
                            @if(customersAccount.IsOpen){
                                <button data-customer-id="@customersAccount.Id" class="btn-link js-delete">Close Account</button>
                            }
                            @if(!customersAccount.IsOpen){
                                <button data-customer-id="@customersAccount.Id" class="btn-link js-open">Open Account</button>
                            }
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
}
@section ViewSpecificJavascript{
    <script>
        $(document).ready(function() {
          var table =   $("#customersAccount").DataTable();
            setTimeout(function() {
                    $(".alert-success").fadeOut(100, null);
                },
                3000);

            $("#customersAccount").on("click", ".js-delete",  function () {
                var button = $(this);

                bootbox.confirm("Are you sure", function(result) {
                    if (result) {
                        $.ajax({
                            url: "/CustomersAccount/CloseAccount/" + button.attr("data-customer-id"),
                            method: "POST",
                            success: function (result) {
                                location.reload();

                                //alert("yo");

                            }
                        });
                    }
                });
                 
            });

            $("#customersAccount").on("click", ".js-open",  function () {
                var button = $(this);

                bootbox.confirm("Are you sure", function(result) {
                    if (result) {
                        $.ajax({
                            url: "/CustomersAccount/OpenAccount/" + button.attr("data-customer-id"),
                            method: "POST",
                            success: function (result) {
                                location.reload();
                            }
                        });
                    }
                });
                 
            });
        });

    </script>

}

